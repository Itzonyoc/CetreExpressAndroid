<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeUsuarioSeleccionar">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/Morado"
            app:popupTheme="@style/AppTheme.PopupOverlay1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/Verde"
                android:textStyle="bold" />
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapViewMenu"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:layout_below="@+id/appBarLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="328dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="102dp" />

    <Button
        android:id="@+id/regresar"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/estilo_botones"
        android:drawableTop="@drawable/ic_keyboard_arrow_left_black_24dp"
        android:onClick="option"
        android:text="Atras"
        android:textColor="@color/Morado"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="700dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="206dp"
        android:layout_height="22dp"
        android:layout_above="@+id/regresar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="103dp"
        android:layout_marginEnd="102dp"
        android:layout_marginBottom="235dp"
        android:text="¿Qué necesitas?"
        android:textAlignment="center"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="197dp"
        tools:layout_editor_absoluteY="359dp" />

    <ImageButton
        android:id="@+id/homeBtn"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_above="@+id/regresar"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="43dp"
        android:background="@drawable/home_btn"
        android:contentDescription="@string/ContentDescription"
        android:onClick="option"
        tools:layout_editor_absoluteX="254dp"
        tools:layout_editor_absoluteY="531dp" />

    <ImageButton
        android:id="@+id/shopBtn"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_above="@+id/regresar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="43dp"
        android:background="@drawable/shop_btn"
        android:contentDescription="@string/ContentDescription"
        android:onClick="option"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="543dp" />

    <ImageButton
        android:id="@+id/cetreGoBtn"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_above="@+id/regresar"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="147dp"
        android:background="@drawable/cetre_go_btn"
        android:contentDescription="@string/ContentDescription"
        android:onClick="option"
        tools:layout_editor_absoluteX="265dp"
        tools:layout_editor_absoluteY="389dp" />

    <ImageButton
        android:id="@+id/gestionBtn"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_above="@+id/regresar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="77dp"
        android:layout_marginBottom="147dp"
        android:background="@drawable/gestion_btn"
        android:contentDescription="@string/ContentDescription"
        android:onClick="option"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="389dp" />
</RelativeLayout>